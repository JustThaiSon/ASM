@model ASM.ViewModels.CategoryViewModels

@{
    ViewData["Title"] = "Create";
}

<div class="container-fluid">
    <h1 class="mt-4">Create Customer</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-action="GetAll" asp-controller="Categories">List Categories</a></li>
        <li class="breadcrumb-item active">Create Customer</li>
    </ol>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NameProduct" class="control-label"></label>
                    <select asp-for="NameProduct" class="form-control">
                        <option value="">--chọn--</option>
                        @foreach (var th in ViewBag.Product)
                        {
                            <option value="@th.NameProduct">@th.NameProduct</option>
                        }
                    </select>
                <span asp-validation-for="NameProduct" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryName" class="control-label"></label>
                <input asp-for="CategoryName" class="form-control" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</div>