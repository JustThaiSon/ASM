@model ASM.Entities.NhaSanXuat

@{
	ViewData["Title"] = "UpdateNhaSanXuat";
}

<div class="container-fluid">
	<h1 class="mt-4">Get Nhà Sản Xuất</h1>
	<ol class="breadcrumb mb-4">
	</ol>
	<div class="row mb-4">
		<div class="col-md-8">
			<ol class="breadcrumb">
				<li class="breadcrumb-item active">List Nhà Sản Xuất</li>
			</ol>
		</div>
	</div>
	<div class="card mb-4">
		<div class="card-header">
			<a class="btn btn-success" asp-action="CreateNhaSanXuat" asp-controller="Product">Tạo mới Nhà Sản Xuất</a>
		</div>
		<hr />
		<div class="row">
			<div class="col-md-4">
				<form asp-action="UpdateNhaSanXuat">
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>
					<input type="hidden" asp-for="NhaSanXuatId" />
					<div class="form-group">
						<label asp-for="TenNhaSanXuat" class="control-label"></label>
						<input asp-for="TenNhaSanXuat" class="form-control" />
						<span asp-validation-for="TenNhaSanXuat" class="text-danger"></span>
					</div>
					<div class="form-group mt-3">
						<input type="submit" value="Save" class="btn btn-primary" />
					</div>
				</form>
			</div>
		</div>
	</div>
</div>


@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
